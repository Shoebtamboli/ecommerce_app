<div class="container mx-auto px-4">
  <h1 class="text-2xl font-semibold mb-6">My Orders</h1>
  <% if @orders.any? %>
    <div class="bg-white shadow-md rounded my-6">
      <table class="text-left w-full border-collapse">
        <thead>
          <tr>
            <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Order #</th>
            <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Date</th>
            <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Total</th>
            <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Status</th>
            <th class="py-4 px-6 bg-grey-lightest font-bold uppercase text-sm text-grey-dark border-b border-grey-light">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr class="hover:bg-grey-lighter">
              <td class="py-4 px-6 border-b border-grey-light"><%= order.id %></td>
              <td class="py-4 px-6 border-b border-grey-light"><%= order.created_at.strftime("%B %d, %Y") %></td>
              <td class="py-4 px-6 border-b border-grey-light">$<%= sprintf('%.2f', order.total) %></td>
              <td class="py-4 px-6 border-b border-grey-light"><%= order.status.capitalize %></td>
              <td class="py-4 px-6 border-b border-grey-light">
                <%= link_to "View", order_path(order), class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-600">You haven't placed any orders yet.</p>
  <% end %>
  <%= link_to "Continue Shopping", products_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>