<div class="container mx-auto px-4">
  <h1 class="text-2xl font-semibold mb-6">Products</h1>
  <%= link_to "Add New Product", new_admin_product_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block" %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-4 py-2 text-left text-sm uppercase tracking-wider border-b">Image</th>
          <th scope="col" class="px-4 py-2 text-left text-sm uppercase tracking-wider border-b">Name</th>
          <th scope="col" class="px-4 py-2 text-left text-sm uppercase tracking-wider border-b">Price</th>
          <th scope="col" class="px-4 py-2 text-left text-sm uppercase tracking-wider border-b">Stock</th>
          <th scope="col" class="px-4 py-2 text-left text-sm uppercase tracking-wider border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="py-2 px-4 border-b">
              <% if product.thumbnail.attached? %>
                <%= image_tag product.thumbnail, class: "w-16 h-16 object-cover" %>
              <% else %>
                <span>No Image</span>
              <% end %>
            </td>
            <td class="py-2 px-4 border-b"><%= product.name %></td>
            <td class="py-2 px-4 border-b">$<%= sprintf('%.2f', product.price) %></td>
            <td class="py-2 px-4 border-b"><%= product.stock %></td>
            <td class="py-2 px-4 border-b">
              <%= link_to "Edit", edit_admin_product_path(product), class: "text-blue-500 hover:text-blue-700 mr-2" %>
              <%= button_to "Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, class: "text-red-500 hover:text-red-700" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-4">
    <%= paginate @products %>
  </div>
</div>