<h1 class="text-2xl font-semibold mb-6">Your Cart</h1>
<% if @cart.cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subtotal</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @cart.cart_items.each do |item| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <% if item.product.thumbnail.attached? %>
                  <%= image_tag item.product.thumbnail, class: "w-full h-24 object-cover mb-4" %>
                <% else %>
                  <div class="w-full h-24 bg-gray-200 flex items-center justify-center mb-4">No Image</div>
                <% end %>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= item.product.name %>
                  </div>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">$<%= sprintf('%.2f', item.product.price) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= form_with(url: update_quantity_cart_path(item), method: :patch, local: true) do |f| %>
                <%= f.number_field :quantity, value: item.quantity, min: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
                <%= f.submit "Update", class: "mt-2 inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              $<%= sprintf('%.2f', item.product.price * item.quantity) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= button_to "Remove", remove_item_cart_path(item), method: :delete, class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="mt-8">
    <h2 class="text-xl font-semibold">Total: $<%= sprintf('%.2f', @cart.total_price) %></h2>
  </div>
  <%= link_to "Continue Shopping", products_path, class: "mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  <%= link_to "Proceed to Checkout", new_order_path, class: "mt-4 ml-4 inline-block bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
<% end %>