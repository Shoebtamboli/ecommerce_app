<div class="max-w-4xl mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4"><%= @product.name %></h1>
  <div class="mb-8">
    <% if @product.thumbnail.attached? %>
      <%= image_tag @product.thumbnail, class: "w-full h-96 object-cover mb-4" %>
    <% else %>
      <div class="w-full h-96 bg-gray-200 flex items-center justify-center mb-4">No Thumbnail</div>
    <% end %>
    <div class="grid grid-cols-4 gap-4">
      <% @product.images.each do |image| %>
        <%= image_tag image, class: "w-full h-32 object-cover" %>
      <% end %>
    </div>
  </div>
  <p class="text-gray-600 mb-4"><%= @product.description %></p>
  <p class="text-2xl font-bold mb-2">$<%= sprintf('%.2f', @product.price) %></p>
  <p class="text-lg mb-4">Stock: <%= @product.stock %></p>
  <%= link_to "Back to Products", products_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
</div>